mixin navLink(title, href)
  li(class='flex-1 min-w-24')
    a(href=href)= title

mixin dayMenu(title, dayMenu)
  div(class='py-2 px-4 flex-1')
    if (title)
      h3(class='text-2xl')= title
    if (dayMenu.length)
      div(class='mt-1 flex flex-col')
        ul(class='list-disc')
          each item in dayMenu
            li(class='mt-1') 
              div
                b= item.name
                i(class='ml-1')= item.price
              div
                i= item.description
    else
      div(class='mt-1') Päivän ruokalista ei ole saatavilla